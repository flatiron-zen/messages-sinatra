<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
    <link href="style.css" rel="stylesheet" />
  </head>
  <body>

    <div class="header">My Messages</div>

    <div id="message-stream">

      <% @messages.each do |message| %>

      <div class="message">
        <img src="<%= message.get_gravatar_url %>" alt="<%= message.email %>" />
        <a href="" class="close"></a>
        <div class="from">
          <%= message.from %>
        </div>
        <div class="content">
          <%= message.content %>
        </div>
        <div class="time">
          <%= message.created_at.strftime("%B %d, %Y ") %>
        </div>
        <div class="clearfix"></div>
      </div>

      <% end %>

    </div>
  </body>
</html>
